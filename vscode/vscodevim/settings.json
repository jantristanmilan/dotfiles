/*
 * VSCode settings.json
 */
{
    "workbench.colorTheme": "Dracula",
    "keyboard.dispatch": "keyCode",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Recommended vscodevim README hotkeys
        {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":nohl"]
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"],
            "silent": true
        },
        // Vertical movement
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z", "z"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"]
        },
        // Telescope
        {
            "before": ["<leader>", "<leader>"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen",
                    "args": []
                }
            ]
        },
        // Window management
        {
            "before": ["<leader>", "w", "w"],
            "after": ["<C-w>", "w"]
        },
        {
            "before": ["<leader>", "w", "|"],
            "after": ["<C-w>", "v"]
        },
        {
            "before": ["<leader>", "w", "d"],
            "after": ["<C-w>", "c"]
        },
        // Harpoon
        {
            "before": ["<leader>", "a"],
            "commands": ["vscode-harpoon.addEditor"]
        },
        {
            "before": ["<leader>", "e"],
            "commands": ["vscode-harpoon.editEditors"]
        },
        {
            "before": ["<leader>", "p", "e"],
            "commands": ["vscode-harpoon.editorQuickPick"]
        },
        {
            "before": ["<leader>", "1"],
            "commands": ["vscode-harpoon.gotoEditor1"]
        },
        {
            "before": ["<leader>", "2"],
            "commands": ["vscode-harpoon.gotoEditor2"]
        },
        {
            "before": ["<leader>", "3"],
            "commands": ["vscode-harpoon.gotoEditor3"]
        },
        {
            "before": ["<leader>", "4"],
            "commands": ["vscode-harpoon.gotoEditor4"]
        },
        {
            "before": ["<leader>", "5"],
            "commands": ["vscode-harpoon.gotoEditor5"]
        },
        {
            "before": ["<leader>", "6"],
            "commands": ["vscode-harpoon.gotoEditor6"]
        },
        {
            "before": ["<leader>", "7"],
            "commands": ["vscode-harpoon.gotoEditor7"]
        },
        {
            "before": ["<leader>", "8"],
            "commands": ["vscode-harpoon.gotoEditor8"]
        },
        {
            "before": ["<leader>", "9"],
            "commands": ["vscode-harpoon.gotoEditor9"]
        },
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "vim.smartRelativeLine": true,
    "editor.lineNumbers": "relative",
    "vim.insertModeKeyBindingsNonRecursive": [],
}